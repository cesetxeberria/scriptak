ui menu.c32
prompt 0
default Zerbitzaria
timeout 20

label Zerbitzaria
 menu hidden
 menu clear
 kernel kernelak/zerbitzaria/vmlinuz
 initrd kernelak/zerbitzaria/initrd.img
 append panic=10 ro boot=live root=/dev/nfs nfsroot={{ ansible_default_ipv4.address }}:/home/irudiak/zerbitzaria ip=dhcp swap --
 ipappend 2

label Stretch installer (amd64)
 menu clear
 kernel kernelak/installer/amd64/linux
 initrd kernelak/installer/amd64/initrd.gz
 append vga=788 --- quiet

label windows
 com32 chain.c32
 append hd0
