apt-get install build-essential fakeroot atool
apt build-dep linux
wget https://kernel.org/pub/linux/kernel/v5.x/linux-5.10.tar.xz
aunpack linux-5.10.tar.xz
wget https://raw.githubusercontent.com/D0023R/linux_kernel_15khz/master/linux-5.10/02_linux_15khz_interlaced_mode_fix.diff
wget https://raw.githubusercontent.com/D0023R/linux_kernel_15khz/master/linux-5.10/01_linux_15khz.dif
cd linux-5.10
patch -p1 < ../01_linux_15khz.diff
patch -p1 < ../02_linux_15khz_interlaced_mode_fix.diff
make defconfig
make clean
make deb-pkg

